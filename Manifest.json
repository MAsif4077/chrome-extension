{
    "manifest_version": 3,
    "name": "Task Manager",
    "version": "1.0",
    "description": "A simple task manager extension.",
    "permissions": [
      "storage"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/task-icon.png",
        "48": "icons/task-icon.png",
        "128": "icons/task-icon.png"
      }
    },
    "icons": {
      "16": "icons/task-icon.png",
      "48": "icons/task-icon.png",
      "128": "icons/task-icon.png"
    }
  }
  